<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 气泡主体 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#2196F3" />
            <!-- 圆角半径 -->
            <corners android:radius="16dp" />
            <!-- 内边距，让文字不紧贴边缘 -->
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- 气泡小三角（右下角） -->
    <item android:top="30dp" android:left="30dp" android:right="0dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#2196F3" />
                <size
                    android:width="12dp"
                    android:height="12dp" />
            </shape>
        </rotate>
    </item>
</layer-list>