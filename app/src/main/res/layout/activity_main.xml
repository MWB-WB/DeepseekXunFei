<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a22">

    <!-- 左侧布局：聊天区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6">

        <!-- 顶部标题栏 -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#5023262f"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="欢迎使用智能助手"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/historyButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="历史对话"
                android:src="@drawable/lishiduihua" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/xjianduihua"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="新建对话"
                android:src="@drawable/baishexj" />
        </LinearLayout>

        <!-- 聊天消息列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toTopOf="@+id/controlPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            tools:listitem="@layout/item_answer_message" />

        <!-- 底部控制面板 -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 功能开关区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/deep_think_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_selected_bg"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/deep_think_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/think_select" />

                    <TextView
                        android:id="@+id/deep_think_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="深度思考（R1）"
                        android:textColor="#00BFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <Space
                    android:layout_width="16dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/deep_crete_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_selected_bg"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:id="@+id/deep_crete_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="声纹验证"
                        android:textColor="#00BFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 输入区域 - 仅显示图标 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_input_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- 键盘输入图标 -->
                <ImageButton
                    android:id="@+id/wdxzskeyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="键盘输入"
                    android:src="@drawable/dakaijianpan" />

                <Space
                    android:layout_width="24dp"
                    android:layout_height="1dp" />

                <!-- 语音输入图标 -->
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/wdxzs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/free_gif"
                        android:contentDescription="语音输入"
                        android:visibility="visible" />

                    <ImageButton
                        android:id="@+id/wdxzs_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/read"
                        android:contentDescription="语音输入"
                        android:visibility="gone" />

                    <FrameLayout
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:paddingStart="9dp"
                        android:paddingTop="9dp">

                        <ImageButton
                            android:id="@+id/wdxzs_think"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/thinking_gif"
                            android:contentDescription="语音输入"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/texte_microphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginRight="80dp"
                        android:layout_marginBottom="45dp"
                        android:text="我在听"
                        android:textColor="#FFFFFF"
                        android:visibility="gone" />

                    <Space
                        android:layout_width="24dp"
                        android:layout_height="1dp" />

                    <!-- 发送图标 -->
                    <ImageButton
                        android:id="@+id/send_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:contentDescription="发送"
                        android:src="@drawable/tingzhi"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 分割线 -->
    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#40000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_layout"
        app:layout_constraintStart_toEndOf="@id/leftLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <!--右侧布局-->
    <FrameLayout
        android:id="@+id/right_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>