<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 标题 -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐私政策"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 最后更新日期 -->
    <TextView
        android:id="@+id/updateDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最后更新日期：2025年4月18日"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- 隐私政策内容 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/updateDateTextView"
        app:layout_constraintBottom_toTopOf="@id/buttonsContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 引言 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 引言"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本应用尊重并保护所有使用服务用户的个人隐私权。本隐私政策旨在说明我们如何收集、使用、存储和保护您的个人信息，特别是关于位置、录音等敏感权限的使用。"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 信息收集与使用 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 信息收集与使用"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <!-- 位置信息 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.1 位置信息"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 收集目的：用于提供周边地点搜索、天气查询等基于位置的服务\n• 使用方式：仅在您使用相关功能时获取当前位置，不会持续追踪\n• 存储方式：位置信息仅临时处理，不会长期存储在服务器上"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- 录音权限 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.2 录音权限"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 收集目的：实现语音输入功能用于声纹识别验证\n• 使用方式：语音输入内容仅用于处理您的请求，声纹特征信息会加密存储用于身份验证\n• 存储期限：语音输入内容实时处理完成后立即删除，声纹特征数据将保留至您主动删除账户，我们不会将您的录音用于其他用途（除本应用使用除外）"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.3 MAC地址收集与使用条款"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 收集目的:我们可能收集设备的MAC地址用于以下合法用途：\n• 设备身份识别（确保服务的设备级唯一性）\n• 网络连接故障诊断\n• 提供基于位置的个性化服务（当与GPS等其他数据结合时）防止欺诈和滥用行为"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- 其他权限 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.4 其他权限"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 存储权限：用于缓存应用数据，提升使用体验\n• 网络权限：用于连接服务器获取服务内容"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 数据共享与披露 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 数据共享与披露"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们承诺不会将您的个人信息出售给第三方。仅在以下情况下，我们可能会共享您的信息：\n• 获得您明确同意后\n• 应法律法规要求或政府主管部门强制要求\n• 为保护本应用及其用户或公众的安全"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 数据安全 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. 数据安全"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们采取各种安全措施来保护您的个人信息：\n• 数据传输使用SSL加密技术\n• 敏感信息(如声纹数据)加密存储\n• 定期安全审计和漏洞修复"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 您的权利 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. 您的权利"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您对您的个人信息享有以下权利：\n• 访问、更正或删除您的个人信息\n• 撤回已同意的权限\n• 注销账户\n• 获取个人信息副本"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 未成年人保护 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. 未成年人保护"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们特别重视未成年人的个人信息保护：\n• 不满14周岁的用户需在监护人同意下使用\n• 不主动收集未成年人的个人信息\n• 监护人可联系我们管理未成年人的账户"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- 联系我们 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. 联系我们"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="如对本隐私政策有任何疑问或建议，请通过以下方式联系我们："
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 邮箱：3403789091@qq.com"
                android:textSize="16sp"
                android:autoLink="email"
                android:linksClickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 客服电话：19129353202"
                android:textSize="16sp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:layout_marginBottom="16dp"/>

            <!-- 同意声明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用本应用即表示您已阅读并同意本隐私政策的全部内容。"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- 按钮容器 -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 拒绝按钮 -->
        <Button
            android:id="@+id/disagreeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="拒绝并退出"
            android:textColor="@android:color/black"
            android:background="@drawable/button_border"
            android:layout_marginEnd="8dp"/>

        <!-- 同意按钮 -->
        <Button
            android:id="@+id/agreeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="同意并继续"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/background_dark"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>