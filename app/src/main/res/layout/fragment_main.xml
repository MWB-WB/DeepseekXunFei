<!-- 右侧功能区域 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/right_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/featureTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="快捷功能"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 固定高度布局 - 无滚动 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featureTitle"
        android:padding="7dp">

        <!-- 路线规划 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#23262f"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="路线规划"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/navigate_gas"
                    style="@style/FunctionButton"
                    android:text="附近的加油站" />

                <Button
                    android:id="@+id/navigate_world_window"
                    style="@style/FunctionButton"
                    android:text="导航到世界之窗"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 休闲娱乐 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#23262f"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="休闲娱乐"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/play_music"
                    style="@style/FunctionButton"
                    android:text="播放毛不易的无名的人"/>

                <Button
                    android:id="@+id/recent_movies"
                    style="@style/FunctionButton"
                    android:text="最近上映的电影"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 天气搜索 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#23262f"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="天气搜索"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/today_weather"
                    style="@style/FunctionButton"
                    android:text="今日的天气"/>

                <Button
                    android:id="@+id/beijing_weather"
                    style="@style/FunctionButton"
                    android:text="北京的天气"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>